extends layout

block scripts
  script(src='/javascripts/index.js' defer)

block content
  main.shadow
    form.forecast-search
      label.lat-long-input-label(for='lat-long-input') Forecast by Latitude and Longitude
      input.lat-long-input(id='lat-long-input' type='text' placeholder='Enter your desired latitude and longitude here')
      input(type='submit' style="display: none;")
    hr
    section.forecast-display
    img.reference-map(src="/images/usa-lat-long-map.webp")
